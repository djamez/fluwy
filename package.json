{
    "name": "@fluwy/ui",
    "version": "0.10.0",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && npm run package && npm run styles",
        "styles": "tailwindcss -i ./src/lib/styles.css -o ./dist/styles.css --minify",
        "preview": "vite preview",
        "package": "svelte-kit sync && svelte-package && publint",
        "release": "changeset publish",
        "prepublishOnly": "npm run build",
        "test:all": "npm run test:integration && npm run test:unit",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "eslint ./src",
        "lint:prettier": "prettier --check ./src",
        "test": "vitest",
        "test:integration": "playwright test",
        "test:integration:fresh": "rm -rf dist && npm run build && sleep 1 && playwright test",
        "test:integration:update": "playwright test --update-snapshots"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        },
        "./tailwind": {
            "types": "./dist/integrations/tailwind/index.d.ts",
            "node": "./dist/integrations/tailwind/index.js"
        },
        "./styles.css": {
            "import": "./dist/styles.css",
            "require": "./dist/styles.css"
        }
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "peerDependencies": {
        "@sveltejs/kit": "^2.0.0",
        "highlight.js": "^11.0.0",
        "svelte": "^5.0.0"
    },
    "peerDependenciesMeta": {
        "highlight.js": {
            "optional": true
        },
        "marked-highlight": {
            "optional": true
        }
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.2",
        "@playwright/test": "^1.52.0",
        "@sveltejs/adapter-auto": "^6.0.0",
        "@sveltejs/kit": "^2.20.7",
        "@sveltejs/package": "^2.3.11",
        "@sveltejs/vite-plugin-svelte": "5.0.3",
        "@tailwindcss/cli": "^4.1.4",
        "@tailwindcss/postcss": "^4.1.4",
        "@tailwindcss/typography": "^0.5.16",
        "@testing-library/svelte": "^5.2.7",
        "@types/color": "^4.2.0",
        "@types/dompurify": "^3.2.0",
        "@types/eslint": "^9.6.1",
        "@types/jsdom": "^21.1.7",
        "@types/lodash": "^4.17.16",
        "@types/node": "^22.15.3",
        "@vitest/coverage-istanbul": "^3.1.2",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.25.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-svelte": "^3.5.1",
        "globals": "^16.0.0",
        "highlight.js": "^11.11.1",
        "nock": "14.0.4",
        "postcss": "^8.5.3",
        "prettier": "^3.5.3",
        "prettier-plugin-svelte": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "publint": "^0.3.12",
        "sass": "^1.87.0",
        "svelte": "5.28.2",
        "svelte-check": "^4.1.6",
        "tailwindcss": "^4.1.4",
        "tailwindcss-animate": "^1.0.7",
        "tslib": "^2.8.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "8.31.1",
        "vite": "^6.3.4",
        "vitest": "^3.1.2"
    },
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "dependencies": {
        "bits-ui": "^1.4.2",
        "clsx": "^2.1.1",
        "color": "^5.0.0",
        "dayjs": "^1.11.13",
        "dompurify": "^3.2.5",
        "hotkeys-js": "^3.13.9",
        "iconify-icon": "^2.3.0",
        "jsdom": "^26.1.0",
        "lodash": "^4.17.21",
        "marked": "^15.0.11",
        "mode-watcher": "^1.0.2",
        "svelte-sonner": "^0.3.28",
        "tailwind-merge": "^3.2.0",
        "yaml": "^2.7.1"
    },
    "packageManager": "pnpm@9.12.3"
}